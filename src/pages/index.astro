<style>
	.hero{
		width: 100%;
		display: flex;
		flex-direction: column;
		justify-content: center;
		height:100vh;
		background: linear-gradient(180deg, #8681DE 0%, rgba(176, 205, 236, 0.90) 100%);
		overflow: hidden;
	}

	.container-hero{
		position: relative;
    	z-index: 1;
		padding: 20px;
		max-width: 650px;
		margin: auto;
	}

	.title-hero {
		text-align: center;
		letter-spacing: 2.3px;
		line-height: 50px;
		margin-bottom: 12px;
	}

	.title-hero span{
		font-size: 1.6em;
		background: linear-gradient(to right,#6b53cd 20%,#3075dd 30%,#31529f 70%,#6d41c5 80%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		text-transform: uppercase;
		background-size: 500% auto;
    	animation: textShine 10s ease-in-out infinite alternate;
	}

	#particles-js{
		width: 100%;
		height: 100%;
		position: absolute;
		top: 0;
		bottom: 0;
		left: 0;
		right: 0;
	}

	@keyframes textShine {
    0% {
        background-position: 0% 50%;
    }
    100% {
        background-position: 100% 50%;
    }
}

	.position{
		color: rgba(3, 3, 3, 0.70);
		text-align: center;
		font-family: Roboto;
		margin-top: 0;
		font-size: 1em;
		font-style: normal;
		font-weight: 400;
		line-height: normal;
		letter-spacing: 6.6px;
		text-transform: uppercase;
	}

	.section-about{
		background: #9A96E1;
	}

	.section-about .container{
		padding: 40px 20px;
		display: flex;
		flex-direction: column-reverse;
		overflow: hidden;
	}

	.section-about .container .content-images{
		position: relative;
		display: flex;
		justify-content: center;
		align-items: center;
		max-width: 550px;
    	margin: auto;
	}

	.section-about .container .astr{
		width:90%;
		height: 180px;
		max-width: 325px;
		object-fit: contain;
		transform: rotate(-15deg);
	}

	.section-about .container h2{
		text-align: center;
		font-size: 2em;
		text-transform: uppercase;
		color:#1B1B1B;
	}

	.section-about .container h2 span{
		background: linear-gradient(180deg, #4C51CC 0%, #4466BF 100%);
    	padding: 2px 15px;
    	color: white;
	}

	.section-about .container .content-about{
		margin-top: 20px;
		text-align: center;

	
	}

	.section-about .container .content-about p{
		color: #FFF;
		font-size: 1em;
		font-style: normal;
		font-weight: 400;
		line-height: 145%; /* 23.2px */
		letter-spacing: 0.32px;
	}

	.point-adr{
		display: none;
		
	}

	.title-hero p{
		margin: 0;
		font-weight: 500;

	}

	.content-contact{
		display: flex;
		justify-content: center;
    	flex-flow: wrap;
    	gap: 15px;
    	padding-top: 25px;
		margin-top: 10px;
		width: 100%;
    	border-top: 3px solid #1b1b1b;
	}

	.content-contact img, .content-contact svg{
		width: 26px;
		height: 24px;
	}

	.content-contact a{
		display: flex;
    justify-content: center;
    align-items: center;
    background: #2237cb8c;
    padding: 0px;
    border-radius: 10px;
	transition: all 0.3s ease;
	}

	.content-contact a div{
		display: flex;
    justify-content: center;
    align-items: center;
		padding: 10px;
	}

	.content-contact a:hover{
		transform: translateY(-5px);
	}

	.animated-astr{
		animation: floating 10s infinite linear alternate-reverse;
		z-index: 2;
	}

	@keyframes floating {
		0%{
			transform: translateY(-0px) rotate(-15deg);
		}
		50%{
			transform: translateY(-33px) rotate(-15deg);
		}

		100%{
			transform: translateY(10px) rotate(-15deg);
		}
	}

	.content-images .star{
		position: absolute;
	}

	.content-images .star:nth-child(1){
		top: 20px;
    	left: -60px;
	}

	.content-images .star:nth-child(2){
		top: 140px;
    	right: 222px;
	}

	.content-images .star:nth-child(3){
		top: 132px;
    	right: 59px;
	}

	.content-images .star:nth-child(4){
		top: 0px;
    	right: -40px;
	}


	.content-images .star:nth-child(5){
		top: 172px;
    	left: 236px;
	}

	.content-images .star:nth-child(6){
		top: 199px;
    	left: 171px;
	}

	.content-images .star:nth-child(7){
		top: 52px;
    	right: 186px;
	}

	.content-images .star:nth-child(8){
		top: 119px;
    left: 34px;
	}

	@keyframes stars1 {
		0%{
			transform: translateY(-0px) rotate(0deg);
		}
		50%{
			transform: translateY(45px) rotate(-360deg);
		}

		100%{
			transform: translateY(0px) rotate(0deg);
		}
	}

	@keyframes stars2 {
		0%{
			transform: translateY(-0px) rotate(0deg);
		}
		50%{
			transform: translateY(-45px) rotate(360deg);
		}

		100%{
			transform: translateY(0px) rotate(0deg);
		}
	}

	@keyframes blink {
		0%{
			opacity: 0.2;
		}
		50%{
			opacity: 0.8;
		}

		100%{
			opacity:0.2
		}
	}

	.content-images .star:nth-child(1),
	.content-images .star:nth-child(2),
	.content-images .star:nth-child(3),
	.content-images .star:nth-child(4){
		animation: stars1 20s 3s infinite linear alternate-reverse;
	}

	.content-images .star:nth-child(5),
	.content-images .star:nth-child(6),
	.content-images .star:nth-child(7),
	.content-images .star:nth-child(8){
		animation: stars2 20s 0.9s infinite linear alternate-reverse;
	}

	.arrow-container{
		margin: auto;
		width: max-content;
		display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    position: absolute;
    bottom: 20px;
    left: 0;
    right: 0;
    z-index: 0;
	border: none;
	background: transparent;
	outline: 0;
	}

	.arrow-container svg{
		transform: rotate(90deg);
		height: 65px;
		width:65px;
		font-weight: 300;
		opacity: 0.7;
		cursor: pointer;
	}

	.arrow-container svg:nth-child(2),
	.arrow-container svg:nth-child(3){
		margin-top: -35px;
	}

	.arrow-container svg:nth-child(1){
		color: #6073d1;
		fill:#6073d1;
		animation: blink 3s 1s infinite linear;
	}

	.arrow-container svg:nth-child(2){
		color:#8482f5;
		fill:#8482f5;
		animation: blink 3s 1.5s infinite linear;
	}

	.arrow-container svg:nth-child(3){
		color: #8f74e3;
		fill:#8f74e3;
		animation: blink 3s 2s infinite linear;
	}

