---
interface Props {
  frontmatter:{
    title: string
    description: string
    readTime: string
    colorTag: string
    tag: string
    date: string
    image: {
      src:string
      alt:string
    }
    url:string
  }
  title: string;
  description: string;
  image:string;
  colorTag:string;
}
import '@fontsource-variable/onest';
import Navbar from '../components/Navbar.astro';
import twitterIcon from '../assets/icons/twitter-icon.png'
const { frontmatter } = Astro.props;
const url = 'https://elrufi.xyz' + Astro.url.pathname
import { ViewTransitions } from 'astro:transitions';
import { Image } from 'astro:assets'

---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={frontmatter.description} />
    <meta name="twitter:card" content="summary">
    <meta name="twitter:creator" content="@Rufi512">
    <meta property="og:type" content="website">
    <meta property="og:title" content={frontmatter.title}>
    <meta property="og:image" content={frontmatter.image.src}>
    <meta property="og:image:width" content="150px">
    <meta property="og:image:height" content="150px">
	  <meta name="viewport" content="width=device-width" />
    <meta property="og:description" content={frontmatter.description}>
	  <link rel="icon" type="image/png" href="/favicon.png" />
	  <meta name="generator" content={Astro.generator} />
		<title>{frontmatter.title}</title>
    <ViewTransitions />
	</head>
	<body>
    <main>
      <Navbar/>
      <div class="p-4 m-auto">
        <div class="py-8 px-4 max-w-[950px] m-auto mt-[90px] glass">

          <section class="flex flex-col justify-center items-center  gap-4 max-w-[780px] m-auto">
            <div class="flex flex-wrap items-center justify-center gap-3">
              <span class={`bg-[${frontmatter.colorTag}] text-white transition-all font-bold px-4 py-1 rounded-full w-fit text-md`}>{frontmatter.tag}</span>
              <span class="text-xl font-semibold text-[#061737]">{frontmatter.readTime}</span>
            </div>
            <span class="text-black text-md font-medium">{frontmatter.date}</span>
            <img transition:name=`${frontmatter.title} image` src={frontmatter.image.src} alt={frontmatter.image.alt} class="flex max-w-[780px] object-cover w-full rounded-md"/>
            <h1 class="text-center text-[#1B1B1B] font-bold text-2xl md:text-3xl p-4">{frontmatter.title}</h1>
            
          </section>

          <section class="flex flex-col p-4 max-w-[780px] m-auto">
            <slot />
            
          </section>

          <section class="pb-5 border-t-[#4785bd5c] border-t-[3px] mt-6">
            <h2 class="text-center mt-5 mb-5">Â¡Comparte este post en tus redes!</h2>

            <div class="buttons-share flex flex-row justify-center items-center flex-wrap gap-5">
              <a class="w-14 h-14 p-1 bg-[#000] rounded-lg transition-all duration-300 hover:-translate-y-2 flex items-center justify-center" target="_blank" rel="nofollow noopener" href=`https://twitter.com/share?=${url}&text="${frontmatter.title} por @Rufi512"` ><Image src={twitterIcon} class="w-9" alt="Twitter Icon"/></a>
              <a class="w-14 h-14 p-1 bg-[#1c48a9] rounded-lg transition-all duration-300 hover:-translate-y-2 flex items-center justify-center" target="_blank" href=`https://www.facebook.com/sharer/sharer.php?u=${url}` rel="noopener noreferrer"><svg  style="fill: white;" xmlns="http://www.w3.org/2000/svg" height="30" width="30" viewBox="0 0 320 512"><!--!Font Awesome Free 6.5.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.--><path d="M80 299.3V512H196V299.3h86.5l18-97.8H196V166.9c0-51.7 20.3-71.5 72.7-71.5c16.3 0 29.4 .4 37 1.2V7.9C291.4 4 256.4 0 236.2 0C129.3 0 80 50.5 80 159.4v42.1H14v97.8H80z"/></svg></a>
              <a class="w-14 h-14 p-1 bg-[#d3471d] rounded-lg transition-all duration-300 hover:-translate-y-2 flex items-center justify-center" target="_blank" href=`https://reddit.com/submit?url=${url}&title=${frontmatter.title}` rel="noopener noreferrer"><svg style="fill:white;" xmlns="http://www.w3.org/2000/svg" height="30" width="30" viewBox="0 0 512 512"><!--!Font Awesome Free 6.5.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.--><path d="M373 138.6c-25.2 0-46.3-17.5-51.9-41l0 0c-30.6 4.3-54.2 30.7-54.2 62.4l0 .2c47.4 1.8 90.6 15.1 124.9 36.3c12.6-9.7 28.4-15.5 45.5-15.5c41.3 0 74.7 33.4 74.7 74.7c0 29.8-17.4 55.5-42.7 67.5c-2.4 86.8-97 156.6-213.2 156.6S45.5 410.1 43 323.4C17.6 311.5 0 285.7 0 255.7c0-41.3 33.4-74.7 74.7-74.7c17.2 0 33 5.8 45.7 15.6c34-21.1 76.8-34.4 123.7-36.4l0-.3c0-44.3 33.7-80.9 76.8-85.5C325.8 50.2 347.2 32 373 32c29.4 0 53.3 23.9 53.3 53.3s-23.9 53.3-53.3 53.3zM157.5 255.3c-20.9 0-38.9 20.8-40.2 47.9s17.1 38.1 38 38.1s36.6-9.8 37.8-36.9s-14.7-49.1-35.7-49.1zM395 303.1c-1.2-27.1-19.2-47.9-40.2-47.9s-36.9 22-35.7 49.1c1.2 27.1 16.9 36.9 37.8 36.9s39.3-11 38-38.1zm-60.1 70.8c1.5-3.6-1-7.7-4.9-8.1c-23-2.3-47.9-3.6-73.8-3.6s-50.8 1.3-73.8 3.6c-3.9 .4-6.4 4.5-4.9 8.1c12.9 30.8 43.3 52.4 78.7 52.4s65.8-21.6 78.7-52.4z"/></svg></a>
            </div>

          </section>

        </div>
      </div>
    </main>
	</body>
</html>
<style is:global>
	body{
		margin: 0;
		padding: 0;
		font-family: 'Onest Variable', sans-serif !important;
        background: linear-gradient(180deg, #8681DE 0%, rgba(176, 205, 236, 0.90) 100%);
        background-repeat: no-repeat;
        min-height: 100vh;
	}

  .image-content{
    max-width:500px;
    width: 100%;
  }

  .image-content-small{
    max-width:300px;
    width: 100%;
  }

  h2{
    font-size: 1.5em;
    font-weight: 600;
    color: #1b1b1b;
  }

  h3{
    font-size: 1.2em;
    font-weight: 600;
    color: #1b1b1b;
  }


  @media(min-width:768px){
    h2{
      font-size: 1.8em;
    }

    h3{
      font-size: 1.5em;
    }

  }

  .glass{
    background: rgba( 245, 245, 245, 0.45 );
    box-shadow: 0 8px 32px 0 rgba( 31, 38, 135, 0.37 );
    backdrop-filter: blur( 14.5px );
    -webkit-backdrop-filter: blur( 14.5px );
    border-radius: 10px;
  }


</style>


